    "conditions": {
        "migraine": {
            "description": "A neurological condition causing severe, often one-sided headaches, sometimes with nausea and light sensitivity.",
            "recommendation": "Rest in a dark, quiet room. Over-the-counter pain relievers may help. If migraines are frequent, consult a neurologist."
        },
        "tension_headache": {
            "description": "The most common type of headache, often caused by stress, poor posture, or muscle tension.",
            "recommendation": "Try stress management, proper posture, and OTC pain relief. Apply a warm or cold compress to your head or neck."
        },
        "chronic_headache": {
            "description": "Headaches occurring 15 or more days per month for at least 3 months.",
            "recommendation": "Please consult a healthcare provider for proper evaluation and management plan."
        },
        "vertigo": {
            "description": "A sensation of spinning or dizziness, often related to inner ear issues.",
            "recommendation": "Avoid sudden head movements. Consult an ENT specialist for proper diagnosis."
        },
        "anemia": {
            "description": "A condition where you lack enough healthy red blood cells to carry oxygen to your tissues.",
            "recommendation": "A blood test can confirm. Increase iron-rich foods and consult your doctor."
        },
        "common_cold": {
            "description": "A viral infection of the upper respiratory tract causing runny nose, sore throat, and cough.",
            "recommendation": "Rest, stay hydrated, and use OTC cold remedies. Usually resolves in 7-10 days."
        },
        "flu": {
            "description": "Influenza — a viral infection with fever, body aches, fatigue, and respiratory symptoms.",
            "recommendation": "Rest, fluids, and OTC medication. See a doctor if symptoms are severe or you're in a high-risk group."
        },
        "strep_throat": {
            "description": "A bacterial infection causing severe sore throat, fever, and swollen lymph nodes.",
            "recommendation": "Requires antibiotics. Please see a doctor for a throat swab test."
        },
        "bronchitis": {
            "description": "Inflammation of the bronchial tubes, often causing persistent cough with mucus.",
            "recommendation": "Rest, fluids, and OTC cough medicine. See a doctor if cough lasts more than 3 weeks."
        },
        "asthma": {
            "description": "A chronic condition causing airway inflammation, wheezing, and breathing difficulty.",
            "recommendation": "Consult a pulmonologist. Avoid triggers and use prescribed inhalers."
        },
        "allergy": {
            "description": "An immune system reaction to substances like pollen, dust, food, or medications.",
            "recommendation": "Identify and avoid triggers. Antihistamines may help. See an allergist for testing."
        },
        "gastritis": {
            "description": "Inflammation of the stomach lining causing pain, nausea, and bloating.",
            "recommendation": "Avoid spicy/acidic foods, reduce stress, and consider antacids. See a doctor if persistent."
        },
        "ibs": {
            "description": "Irritable Bowel Syndrome — a disorder affecting the large intestine with cramping and bowel changes.",
            "recommendation": "Dietary changes (low FODMAP), stress management, and fiber supplements may help."
        },
        "gastroenteritis": {
            "description": "Stomach flu — inflammation of the stomach and intestines, usually caused by a virus.",
            "recommendation": "Stay hydrated with clear fluids. See a doctor if symptoms last more than 3 days."
        },
        "eczema": {
            "description": "A condition causing inflamed, itchy, red skin patches.",
            "recommendation": "Moisturize regularly, avoid irritants, and use prescribed topical creams."
        },
        "arthritis": {
            "description": "Joint inflammation causing pain, stiffness, and swelling.",
            "recommendation": "Low-impact exercise, OTC anti-inflammatory drugs, and consult a rheumatologist."
        },
        "thyroid": {
            "description": "Thyroid disorders can cause fatigue, weight changes, and mood shifts.",
            "recommendation": "A blood test (TSH) can diagnose. Consult an endocrinologist."
        },
        "anxiety": {
            "description": "A mental health condition with excessive worry, restlessness, and physical symptoms.",
            "recommendation": "Consider therapy (CBT), stress management, and consult a mental health professional."
        },
        "acid_reflux": {
            "description": "Gastroesophageal reflux — stomach acid flowing back into the esophagus causing heartburn.",
            "recommendation": "Avoid trigger foods, eat smaller meals, don't lie down after eating. OTC antacids may help."
        },
        "serious_condition": {
            "description": "Your symptoms may indicate a condition requiring prompt medical attention.",
            "recommendation": "Please seek medical attention as soon as possible. Contact your healthcare provider or visit an urgent care facility."
        },
        "food_poisoning": {
            "description": "Illness from consuming contaminated food or water.",
            "recommendation": "Stay hydrated, rest, and see a doctor if symptoms are severe or last more than 2 days."
        },
        "dehydration": {
            "description": "Insufficient fluid intake leading to dizziness, fatigue, and dry mouth.",
            "recommendation": "Drink plenty of water and electrolyte solutions. Seek medical help if severe."
        }
    }
}