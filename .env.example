# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/healthcare_chatbot
DATABASE_URL_SYNC=postgresql://postgres:postgres@db:5432/healthcare_chatbot
SQLITE_FALLBACK=false

# Redis
REDIS_URL=redis://redis:6379/0

# JWT
JWT_SECRET_KEY=change-me-to-a-secure-random-string-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption
AES_ENCRYPTION_KEY=change-me-to-a-32-byte-hex-key-0123456789abcdef

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# App
APP_ENV=development
APP_DEBUG=true
